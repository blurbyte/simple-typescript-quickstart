{
  "name": "simple-typescript-quickstart",
  "version": "1.0.0",
  "description": "Simple base for TypeScript projects, with basic tooling configured.",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "prestart": "rimraf dist",
    "start": "tsc --watch",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "lint": "tslint --format stylish src/**/*.ts",
    "format": "prettier --single-quote --trailing-comma es5 --print-width 120 --write 'src/**/*.ts'"
  },
  "keywords": [
    "typescript",
    "tslint",
    "jest"
  ],
  "author": "blurbyte",
  "license": "MIT",
  "engines": {
    "node": ">=8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/blurbyte/simple-typescript-quickstart"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 120
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.js$"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "testMatch": [
      "<rootDir>/**/?(*.)test.ts"
    ]
  },
  "devDependencies": {
    "@types/jest": "21.1.4",
    "@types/node": "8.0.46",
    "jest": "21.2.1",
    "prettier": "1.7.4",
    "rimraf": "2.6.2",
    "ts-jest": "21.1.3",
    "tslib": "1.8.0",
    "tslint": "5.8.0",
    "tslint-config-prettier": "1.6.0",
    "tslint-plugin-prettier": "1.3.0",
    "typescript": "2.5.3"
  }
}
